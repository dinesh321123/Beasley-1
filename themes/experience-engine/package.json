{
	"name": "experience-engine",
	"scripts": {
		"build": "webpack --progress app=./assets/scripts/app.js --config-name=dev-config",
		"watch": "webpack --progress app=./assets/scripts/app.js --config-name=watch-config",
		"bundle": "webpack --progress app=./assets/scripts/app.js --config-name=prod-config"
	},
	"dependencies": {
		"@babel/core": "^7.1.2",
		"@babel/preset-env": "^7.1.0",
		"@babel/preset-react": "^7.0.0",
		"babel-eslint": "^10.0.1",
		"babel-loader": "^8.0.4",
		"css-loader": "^1.0.0",
		"eslint": "^5.7.0",
		"eslint-config-airbnb": "^17.1.0",
		"eslint-loader": "^2.1.1",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-jsx-a11y": "^6.1.2",
		"eslint-plugin-react": "^7.11.1",
		"mini-css-extract-plugin": "^0.4.4",
		"postcss-import": "^12.0.0",
		"postcss-loader": "^3.0.0",
		"postcss-preset-env": "^6.1.1",
		"react": "^16.5.2",
		"react-dom": "^16.5.2",
		"webpack": "^4.20.2",
		"webpack-cli": "^3.1.2"
	},
	"eslintConfig": {
		"extends": "airbnb",
		"env": {
			"browser": true
		},
		"rules": {
			"no-tabs": 0,
			"max-len": 0,
			"padded-blocks": [2, { "classes": "always" }],
			"no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
			"indent": [ 2, "tab", { "SwitchCase": 1 }],
			"react/jsx-indent": [2, "tab"],
			"react/jsx-filename-extension": 0,
			"jsx-a11y/label-has-for": 0,
			"jsx-a11y/label-has-associated-control": 0
		}
	},
	"browserslist": [
		"Chrome > 55",
		"Safari > 9",
		"Explorer 11",
		"Edge >= 15",
		"Firefox >= 51",
		"Android > 55",
		"iOS > 9",
		"Samsung >= 5"
	]
}
